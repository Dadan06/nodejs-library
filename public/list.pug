doctype
html(lang='en')
    head
        meta(charset='utf-8')
        title Facture
        link(rel="stylesheet" href="/assets/css/reset.css")
        link(rel="stylesheet" href="/assets/fonts/work-sans.css")
        link(rel="stylesheet" href="/assets/css/sale.css")
    body
        header
            div(class="logo")
                img(src='/assets/images/logo.png' , alt='Logo')
                h2 *** FIKAMBANANA MPIARA-MAMAKY NY BAIBOLY ***

            div(class="title")
                h1 FACTURE

            div(class="summary")
                div(class="info")
                    h4 Date du commande
                    span=paymentDate

                div(class="info")
                    h4 NÂ° de commande
                    span=payment.sale.no

                if payment.sale.discount > 0
                    div(class="info")
                        h4 Remise (Ar)
                        span=toCurrency(payment.sale.discount)

                if payment.sale.client
                    div(class="info")
                        h4 Client
                        span=payment.sale.client.name
        main
            table
                thead
                    tr
                        td Designation
                        td Qte
                        td PU (Ar)
                        td Sous total (Ar)
                tbody
                    each item in payment.sale.saleItems
                        tr
                            td=item.product.name
                            td=item.quantity
                            td=toCurrency(item.product.sellingPrice)
                            td=toCurrency(item.quantity * item.product.sellingPrice)
        footer
            div(class="info")
                h4 Total (Ar)
                span=toCurrency(payment.amount)
